<div class="row">
  <div class="col-md-6 col-md-offset-4 bug_header">
    <h1>List of active bugs</h1>
  </div>
</div>

<div class="col-md-9 col-md-offset-2">
  <% @bugs.each do |bug| %>
      <div class="row well">
        <div class="col-md-5">
          <span class="col-ms-2">
          <%= link_to bug.ticket_number, bug_path(bug), class: 'ticket_number' %>
          </span>


          <span class="bug_title">
            <%= bug.bug_title %>
          </span>


          <span class="score">
            Score: <%= bug.score %>
          </span>
        </div>
        <div class="bug_actions col-md-2 col-md-offset-2">
          <%= link_to 'Edit this bug', edit_bug_path(bug), class: 'btn btn-xs btn-primary' %>
          <%= link_to 'Delete this bug', bug_path(bug),
                      method: :delete,
                      data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
        </div>
      </div>

  <% end %>

  <div class="actions">
    <%= link_to 'Add new Bug', new_bug_path, class: 'btn btn-xs btn-primary' %>
  </div>
</div>